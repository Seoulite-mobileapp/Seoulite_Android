<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <View
        android:layout_gravity="top"
        android:id="@+id/result_agency_divider"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#666666"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/result_agency_district"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Yongsan_Gu"
        android:textSize="20sp"
        android:visibility="visible"
        android:textColor="#009898"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="7dp"
            android:id="@+id/result_agency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/result_agency_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="111"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/result_agency_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="82-5632-8954"
            android:layout_marginRight="40dp"/>
        <ImageView
            android:id="@+id/result_agency_eng"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/language_us" />

        <ImageView
            android:id="@+id/result_agency_ch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/language_china" />

        <ImageView
            android:id="@+id/result_agency_jp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/language_japan" />

        <ImageView
            android:id="@+id/result_agency_portuguese"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/language_portugal" />

        <ImageView
            android:id="@+id/result_agency_russian"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/language_russia" />

        <ImageView
            android:id="@+id/result_agency_spainish"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:background="@drawable/language_spain" />
    </LinearLayout>
</LinearLayout>